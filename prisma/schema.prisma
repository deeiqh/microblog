// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  uuid String @id @default(uuid())
  firstName String
  lastName String
  email String @unique
  posts Post[]
  likes Post[] @relation("likes")
}

model Post {
  uuid String @id @default(uuid())
  title String
  category String?
  content String
  account Account @relation(fields: [accountId], references: [uuid])
  accountId String
  likes Account[] @relation("likes")
}

